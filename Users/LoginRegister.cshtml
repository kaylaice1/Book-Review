<div>
    <h2>Login</h2>
    <form asp-action="Login">
        <div>
            <label>Email</label>
            <input asp-for="LoginModel.Email" />
        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="LoginModel.Password" />
        </div>
        <button type="submit">Login</button>
    </form>
</div>

<hr />

<div>
    <h2>Register</h2>
    <form asp-action="Register">
        <div>
            <label>Username</label>
            <input asp-for="RegisterModel.Username" />
        </div>
        <div>
            <label>Email</label>
            <input asp-for="RegisterModel.Email" />
        </div>
        <div>
            <label>Password</label>
            <input type="password" asp-for="RegisterModel.Password" />
        </div>
        <button type="submit">Register</button>
    </form>
</div>
