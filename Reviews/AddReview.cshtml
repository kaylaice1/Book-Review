<form asp-action="AddReview">
    <input type="hidden" asp-for="BookId" />
    <div>
        <label>Review</label>
        <textarea asp-for="ReviewText"></textarea>
    </div>
    <div>
        <label>Rating</label>
        <input asp-for="Rating" type="number" min="1" max="5" />
    </div>
    <button type="submit">Submit Review</button>
</form>