<form asp-action="AddBook">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Genre</label>
        <input asp-for="Genre" />
    </div>
    <div>
        <label>Publication Year</label>
        <input asp-for="PublicationYear" type="number" />
    </div>
    <button type="submit">Add Book</button>
</form>
