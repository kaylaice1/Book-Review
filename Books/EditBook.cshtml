<form asp-action="EditBook">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Genre</label>
        <input asp-for="Genre" />
    </div>
    <div>
        <label>Publication Year</label>
        <input asp-for="PublicationYear" type="number" />
    </div>
    <button type="submit">Save Changes</button>
</form>
